<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shobhitsagar.toast.MainActivity">
    
    <Button
        android:id="@+id/circleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press me to get a circular Toast"
        android:textAllCaps="false"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:onClick="toastBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press me to get a rectangular Toast"
        android:textAllCaps="false"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:onClick="rectToastBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/circleBtn"/>

</RelativeLayout>
